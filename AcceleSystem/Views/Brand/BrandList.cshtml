
@{
    ViewBag.Title = "BrandList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">

}

<div class="row">
    <div class="col-md-2">
        <button id="btnAdd" onclick="btnAddClick()" class="btn col-xl-10 text-center" tabindex="38" style="background-color:#1a8cff; color:azure;">
            ユーザー追加
        </button>
    </div>
    <div class="col-md-4">
        <i class="fa fa-search"></i>
        <input type="text" placeholder="Search" class="border border-white"><br />
        <table id="tbl1">
            <thead>
                <tr>
                    <td>UserID</td>
                    <td>UserName</td>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts{

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            GetUser();
        });

        function GetUser() {
            $.ajax({
                type: "GET",
                url:"@Url.Action("M_User_Select", "api/UserApi")",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    BindTable(response);
                }
            });
        }

        function BindTable(response) {
            table = $('#tbl1').DataTable({

                data: JSON.parse(response),
                "bFilter": false,
                "bLengthChange": false,
                "columns": [
                    {
                        "data": null,
                        render: function (data, type, row) {
                            return '<b><label>' + data.ID + '</label></b><br/><label>' + data.UserName + '</label>';
                        }
                    },
                    {
                        "data": null,
                        render: function (data, type, row) {
                            return '<a href="#" onclick="EditClick();" style="color:blue">編集</a><br/><a href="#" style="color:red">削除</a>';
                        }
                    },
                ],
                "drawCallback": function (settings) {
                    $("#tbl1 thead").remove();
                }
            });

        }

        function EditClick() {
            alert("Edit");
        }
    </script>
}
