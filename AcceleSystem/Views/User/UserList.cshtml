
@{
    ViewBag.Title = "UserList";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/ElaAdmin/assets/css/lib/datatable/dataTables.bootstrap.min.css")" />
}

<div class="row">
    <ul class="breadcrumb">
        <li><i class="fa fa-list" style="width:1580px;">&nbsp; <b>User List</b></i></li>
    </ul>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-3 col-lg-2">
            <button id="btnAdd" onclick="btnAddClick()" class="btn btn-primary">
                ユーザー追加
            </button>
        </div>

        <div class="col-sm-7">
            <i class="fa fa-search"></i>
            <input type="text" id="myInput" style="padding:10px;" placeholder="Search" class="border border-white">
            <table id="tblUser" class="hrtable col-sm-12">
                <thead>
                    <tr>
                        <td>UserID</td>
                        <td>UserName</td>
                    </tr>
                </thead>               
            </table>
        </div>

        <div class="col-sm-2">
            <div class="table-responsive">
                <table id="tbl">
                    <thead>
                    </thead>                     
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script type="text/javascript">
        $(document).ready(function () {

            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tblUser tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

        GetUser();
    });



    function GetUser() {
        $.ajax({
            type: "GET",
            url:"@Url.Action("M_User_Select", "api/UserApi")",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                    BindTable(response);
                }
        });
        //$(".Previous.paginate_button, .Next.paginate_button").hide();
    }

        function BindTable(response) {
            table = $('#tblUser').DataTable({

                data: JSON.parse(response),
                "bFilter": false,
                "bLengthChange": false,
                "columns": [
                    {
                        "data": null,
                        render: function (data, type, row) {
                            return '<b><label>' + data.ID + '</label></b><br/><label>' + data.UserName + '</label>';
                        }
                    },
                    {
                        "data": null,
                        render: function (data, type, row) {
                            return '<a href="#" onclick="btnEditClick('+data.ID+');" style="color:blue" >編集</a><br/><a style="color:red">削除</a>';
                        }
                    },
                ],
                "drawCallback": function (settings) {
                    $("#tblUser thead").remove();
                }
            });

        }

    function btnAddClick() {
        location.href = '@Url.Action("UserEntry", "User")';
    }

    function btnEditClick(UserID) {
        var param = UserID + '_' + 'Edit';
        location.href = '@Url.Action("UserEntry", "User")';
