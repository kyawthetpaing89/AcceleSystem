@{
    Layout = null;
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div id="divAdd" class="col-sm-2 col-md-3">
                <button id="btnAdd" onclick="btnAddClick()" class="btn col-xl-10 text-center" tabindex="38" style="background-color:#1a8cff; color:azure;">
                    ブランド追加
                </button>
            </div>

            <div class="col-sm-8 col-md-8 col-lg-8">
                <i class="fa fa-search" style="padding-left:15px;"></i>
                <input type="text" id="myInput" placeholder="ブランド名入力" class="border border-white" style="width:80%;padding-bottom:10px">
                <table id="tblBrand" class="tb1 col-sm-12" style="padding-left:0px;width:100%">
                    <thead>
                        <tr>
                            <th>
                                <table>
                                    <tr class="col-md-12">
                                        <th style="width:20%">ブランドコード</th>
                                        <th style="width:60%">ブランド名</th>
                                        <th style="width:20%"></th>
                                    </tr>
                                </table>
                            </th>

                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function BrandLoad() {
        $("#divAdd").hide();
    }
</script>
