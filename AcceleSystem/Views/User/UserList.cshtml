@{
    ViewBag.Title = "UserList";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    @*<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap-textbox.css")" />*@

}
<input type="hidden" id="UserType" value="1" />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div id="divAddUser" class="col-sm-2 col-md-3">
                <button id="btnAdd" onclick="AddUser()" class="btn col-xl-10 text-center" tabindex="38" style="background-color:#1a8cff; color:azure;">
                    ユーザー追加
                </button>
            </div>
            <div class="col-sm-9 col-md-9">
                <i class="fa fa-search" style="padding-left:15px;"></i>
                <input type="text" id="UserInput" onkeydown="UserKeyDown(event)" placeholder="ユーザー名入力......" class="border border-white" style="width:80%;padding-bottom:10px">
                <table id="tblUser" data-request-url='@Url.Action("M_User_Select", "api/UserApi")' class="tb col-sm-12" style="padding-left:0px;width:100%">
                    <thead>
                        <tr>
                            <th>
                                <table class="col-md-12">
                                    <tr>
                                        <th style="width:30%">ユーザーID</th>
                                        <th style="width:55%">ユーザー名</th>
                                        <th style="width:15%"></th>
                                    </tr>
                                </table>
                            </th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="@Url.Content("~/ElaAdmin/assets/js/User.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            UserList_Load();
        });
       
        function AddUser() {
            location.href = '@Url.Action("UserEntry", "User")?Mode=New'
        }

        function EditUser(UserID) {
            location.href = '@Url.Action("UserEntry", "User")?UserID='+UserID+'&Mode=Edit';
        }

        function DelUser(UserID) {
            location.href = '@Url.Action("UserEntry", "User")?UserID='+UserID+'&Mode=Delete';
        }
    </script>
}