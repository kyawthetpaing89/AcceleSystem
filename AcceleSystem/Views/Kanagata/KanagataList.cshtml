@{
    ViewBag.Title = "KanagataList";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}
@*@section Styles{
        <link rel="stylesheet" href="@Url.Content(" ~/ElaAdmin/assets/css/lib/datatable/dataTables.bootstrap.min.css")" />
    }*@
<input type="hidden" id="KanagataType" value="1" />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div id="divAddKanagata" class="col-sm-2 col-md-3">
                <button id="btnAdd" onclick="btnAddClick()" class="btn col-xl-10 text-center" tabindex="38" style="background-color:#1a8cff; color:azure;">
                    金型追加
                </button>
            </div>
            <div class="col-sm-7 col-md-6">
                <i class="fa fa-search" style="padding-left:15px;"></i>
                <input type="text" id="KanagataInput" onkeydown="KanagataKeyDown(event)" placeholder="金型名入力" class="border border-white" style="width:80%;padding-bottom:10px">
                <table id="tblCasting" data-request-url="@Url.Action("M_Casting_Select", "api/KanagataApi")" class="tb1 col-sm-12" style="padding-left:0px; width: 100%">
                    <thead>
                        <tr>
                            <th>
                                <table class="col-md-12">
                                    <tr>
                                        <th style="width:25%">金型コード</th>
                                        <th style="width:45%">金型名</th>
                                        <th style="width:20%"></th>
                                    </tr>
                                </table>
                            </th>

                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
    $(document).ready(function () {
        KanagataList_Load();
    });

    function btnAddClick() {
        location.href = '@Url.Action("KanagataEntry", "Kanagata")?Mode=New'
    }

    function btnEditClick(CastingCD) {
        location.href = '@Url.Action("KanagataEntry", "Kanagata")?CastingCD=' + CastingCD + '&Mode=Edit';
    }

    function btnDelClick(CastingCD) {
        location.href = '@Url.Action("KanagataEntry", "Kanagata")?CastingCD=' + CastingCD + '&Mode=Delete';
    }
    </script>
    <script src="@Url.Content("~/ElaAdmin/assets/js/Kanagata.js")"></script>
}


