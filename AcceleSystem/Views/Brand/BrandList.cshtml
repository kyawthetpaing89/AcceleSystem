
@{
    ViewBag.Title = "BrandList";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="BrandType" value="1" />
<div class="card">
    <div class="card-body">
        <div class="row">
            <div id="divAddBrand" class="col-sm-2 col-md-3">
                <button id="btnAdd" onclick="AddBrand()" class="btn col-xl-10 text-center" tabindex="38" style="background-color:#1a8cff; color:azure;">
                    ブランド追加
                </button>
            </div>

            <div class="col-sm-8 col-md-8 col-lg-8">
                <i class="fa fa-search" style="padding-left:15px;"></i>
                <input type="text" id="myInput" placeholder="ブランド名入力" onkeydown="BrandKeyDown(event)" class="border border-white" style="width:80%;padding-bottom:10px">
                <table id="tblBrand" data-request-url='@Url.Action("M_Brand_Select", "api/BrandApi")' class="tb1 col-sm-12" style="padding-left:0px;width:100%">
                    <thead>
                        <tr>
                            <th>
                                <table class="col-md-12">
                                    <tr >
                                        <th style="width:30%">ブランドコード</th>
                                        <th style="width:60%">ブランド名</th>
                                        <th style="width:10%"></th>
                                    </tr>
                                </table>
                            </th>

                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            BrandList_Load();
        });



    function AddBrand() {
        location.href = '@Url.Action("BrandEntry", "Brand")?Mode=New'
    }

    function EditBrand(BrandCD) {
        location.href = '@Url.Action("BrandEntry", "Brand")?BrandCD='+BrandCD+'&Mode=Edit';
    }

    function DelBrand(BrandCD) {
        location.href = '@Url.Action("BrandEntry", "Brand")?BrandCD='+BrandCD+'&Mode=Delete';
        }
    </script>
    <script src="@Url.Content("~/ElaAdmin/assets/js/Brand.js")"></script>
}

